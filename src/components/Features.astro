---
import Layout from "@/layouts/Layout.astro"

const FEATURES = [
        {
            icon: 'ti ti-link',
            title: 'Acortamiento Instantáneo',
            description: 'Transforma URLs largas en enlaces cortos y elegantes en milisegundos',
            color: 'purple'
        },
        {
            icon: 'ti ti-qrcode',
            title: 'Códigos QR Personalizados',
            description: 'Genera códigos QR únicos para cada enlace con un solo click',
            color: 'blue'
        },
        {
            icon: 'ti ti-shield',
            title: 'Protección con Contraseña',
            description: 'Asegura tus enlaces importantes con autenticación por contraseña',
            color: 'purple'
        },
        {
            icon: 'ti ti-device-analytics',
            title: 'Analíticas Avanzadas',
            description: 'Métricas detalladas de clics, ubicaciones y dispositivos en tiempo real',
            color: 'blue'
        },
        {
            icon: 'ti ti-world',
            title: 'Datos Geográficos',
            description: 'Visualiza de dónde provienen tus visitantes con mapas interactivos',
            color: 'purple'
        },
        {
            icon: 'ti ti-trending-up',
            title: 'Seguimiento de Tendencias',
            description: 'Identifica patrones y optimiza tu estrategia con insights profundos',
            color: 'blue'
        },
] as const

---

<section id="features" class="relative z-10 max-w-7xl mx-auto px-6 py-8">
    <div class="text-center mb-16">
        <h2 class="text-4xl md:text-5xl mb-4">Características</h2>
        <p class="text-xl text-slate-400">Todo lo que necesitas para administrar y optimizar tus enlaces</p>
    </div>

    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
        {FEATURES.map((feature) => (
            <div
            class="group rounded-[12px] bg-white/5 border border-white/10 backdrop-blur-sm p-6 hover:bg-white/10 transition-all hover:scale-105 cursor-pointer"
            >
            <div
                class={`w-12 h-12 rounded-xl bg-gradient-to-br ${
                feature.color === "purple"
                    ? "from-purple-500/20 to-purple-600/20 border border-purple-500/30"
                    : "from-blue-500/20 to-blue-600/20 border border-blue-500/30"
                } flex items-center justify-center mb-4`}
            >
                <i class={`${feature.icon} iteam-center text-2xl w-6 h-6 ${feature.color === "purple" ? "text-purple-500" : "text-blue-500"}`}></i>
            </div>
                <h3 class="text-xl mb-2">{feature.title}</h3>
                <p class="text-slate-400">{feature.description}</p>
            </div>

        ))}

    </div>
</section>